<%- include('../partials/header') %>


<h2 class="updatePost">Update Post</h2>
<form action="/posts/<%= foundPost._id %>?_method=PUT" method="POST" autocomplete="off">
  <label>Post:</label>
  <input name="title" type="text" value="<%= foundPost.title %>" >
  <input name="genre" type="text" value="<%= foundPost.genre %>">
  <textarea name="content"><%= foundPost.content %></textarea>
    <% if (user && user._id.equals(foundPost.user)) { %>
        <input type="submit" value="Update Post">
    <% } %>    
</form>
<%- include('../partials/footer') %>
