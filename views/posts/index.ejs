<%- include('../partials/header') %>

  <h2>
    <%= title %>
  </h2>
  <form id="searchBar" action="/posts" method="GET">
    <input type="text" placeholder="Search Authors..." name="authorName">
    <button><i class="fas fa-search"></i>Search</button>
  </form>
  <% posts.forEach(function(p) { %>
    <article id="postContent">
      <h3>
        <a href="/posts/<%= p._id %>"><%= p.title %></a> 
      </h3>
      <p>
        <%= p.genre %>
      </p>
      <p>
        <%= p.content %>
      </p>
      <h4>
        <img id="userAvatar" src="<%= p.userAvatar %>"> <%= p.userName %>
      </h4><br><br>
    </article>
    
    <td>
      <% if (user && user._id.equals(p.user)) { %>
        <form action="/posts/<%= p._id %>?_method=DELETE" method="POST">
          <button type="submit">delete</button>
        </form>
      <% } %>
    </td>
  <% }) %>
 
<%- include('../partials/footer') %>